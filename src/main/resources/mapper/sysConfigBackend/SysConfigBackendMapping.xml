<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.cilicili.backend.config.mapper.SysConfigBackendMapper">
    
    <resultMap type="site.cilicili.backend.config.domain.pojo.SysConfigBackendEntity" id="SysConfigBackendMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
        <result property="updatedBy" column="updated_by" jdbcType="VARCHAR"/>
        <result property="deletedAt" column="deleted_at" jdbcType="TIMESTAMP"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="stable" column="stable" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="memo" column="memo" jdbcType="VARCHAR"/>
        <result property="configItem" column="config_item" jdbcType="VARCHAR"/>
        <result property="itemDefault" column="item_default" jdbcType="VARCHAR"/>
        <result property="itemCustom" column="item_custom" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="queryById" resultMap="SysConfigBackendMap">
        select id,
               created_at,
               created_by,
               updated_at,
               updated_by,
               deleted_at,
               sort,
               stable,
               status,
               memo,
               config_item,
               item_default,
               item_custom
        from sys_config_backend
        where id = #{id}
    </select>
    
    <!--查询指定行数据-->
    <select id="queryAll" resultMap="SysConfigBackendMap">
        select
        id, created_at, created_by, updated_at, updated_by, deleted_at, sort, stable, status, memo, config_item,
        item_default, item_custom
        from sys_config_backend
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createdAt != null">
                and created_at = #{createdAt}
            </if>
            <if test="createdBy != null and createdBy != ''">
                and created_by = #{createdBy}
            </if>
            <if test="updatedAt != null">
                and updated_at = #{updatedAt}
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                and updated_by = #{updatedBy}
            </if>
            <if test="deletedAt != null">
                and deleted_at = #{deletedAt}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="stable != null and stable != ''">
                and stable = #{stable}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
            <if test="configItem != null and configItem != ''">
                and config_item = #{configItem}
            </if>
            <if test="itemDefault != null and itemDefault != ''">
                and item_default = #{itemDefault}
            </if>
            <if test="itemCustom != null and itemCustom != ''">
                and item_custom = #{itemCustom}
            </if>
        </where>
    </select>
    
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from sys_config_backend
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createdAt != null">
                and created_at = #{createdAt}
            </if>
            <if test="createdBy != null and createdBy != ''">
                and created_by = #{createdBy}
            </if>
            <if test="updatedAt != null">
                and updated_at = #{updatedAt}
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                and updated_by = #{updatedBy}
            </if>
            <if test="deletedAt != null">
                and deleted_at = #{deletedAt}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="stable != null and stable != ''">
                and stable = #{stable}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
            <if test="configItem != null and configItem != ''">
                and config_item = #{configItem}
            </if>
            <if test="itemDefault != null and itemDefault != ''">
                and item_default = #{itemDefault}
            </if>
            <if test="itemCustom != null and itemCustom != ''">
                and item_custom = #{itemCustom}
            </if>
        </where>
    </select>
    
    <resultMap type="site.cilicili.backend.config.domain.dto.SysConfigBackendDto$Records" id="ConfigBackendDto">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
        <result property="updatedBy" column="updated_by" jdbcType="VARCHAR"/>
        <result property="deletedAt" column="deleted_at" jdbcType="TIMESTAMP"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="stable" column="stable" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="memo" column="memo" jdbcType="VARCHAR"/>
        <result property="configItem" column="config_item" jdbcType="VARCHAR"/>
        <result property="itemDefault" column="item_default" jdbcType="VARCHAR"/>
        <result property="itemCustom" column="item_custom" jdbcType="VARCHAR"/>
        <association property="createdByUser" column="created_by=created_by"
                     select="site.cilicili.backend.role.mapper.SysRoleMapper.findCreatedByUser"/>
        <association property="updatedByUser" column="updated_by=updated_by"
                     select="site.cilicili.backend.role.mapper.SysRoleMapper.findUpdatedByUser"/>
    </resultMap>
    
    
    <select id="queryConfigBackendAll"
            resultMap="ConfigBackendDto">
        select *
        from sys_config_backend;
    </select>
    <select id="getConfigBackendList" resultMap="ConfigBackendDto">
        select *
        from sys_config_backend
        <where>
            <trim prefix="(" suffix=")" prefixOverrides="or">
                <if test="configItem!=null and configItem!=''">
                    <bind name="rcl" value="'%'+configItem+'%'"/>
                    config_item like #{rcl}
                </if>
                <if test="memo!=null and memo!=''">
                    <bind name="rl" value="'%'+memo+'%'"/>
                    or memo like #{rl}
                </if>
            </trim>
        </where>
        <if test="desc">
            order by #{sortBy} desc
        </if>
        <if test="page>0 and pageSize>0">
            <bind name="cur" value="(page*pageSize)-pageSize"/>
            limit #{cur},#{pageSize}
        </if>
        ;
    </select>
    
    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_config_backend(created_at, created_by, updated_at, updated_by, deleted_at, sort, stable, status,
                                       memo, config_item, item_default, item_custom)
        values (#{createdAt}, #{createdBy}, #{updatedAt}, #{updatedBy}, #{deletedAt}, #{sort}, #{stable}, #{status},
                #{memo}, #{configItem}, #{itemDefault}, #{itemCustom})
    </insert>
    
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sys_config_backend(created_at, created_by, updated_at, updated_by, deleted_at, sort, stable, status,
        memo, config_item, item_default, item_custom)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createdAt}, #{entity.createdBy}, #{entity.updatedAt}, #{entity.updatedBy}, #{entity.deletedAt},
            #{entity.sort}, #{entity.stable}, #{entity.status}, #{entity.memo}, #{entity.configItem},
            #{entity.itemDefault}, #{entity.itemCustom})
        </foreach>
    </insert>
    
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sys_config_backend(created_at, created_by, updated_at, updated_by, deleted_at, sort, stable, status,
        memo, config_item, item_default, item_custom)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createdAt}, #{entity.createdBy}, #{entity.updatedAt}, #{entity.updatedBy}, #{entity.deletedAt},
            #{entity.sort}, #{entity.stable}, #{entity.status}, #{entity.memo}, #{entity.configItem},
            #{entity.itemDefault}, #{entity.itemCustom})
        </foreach>
        on duplicate key update
        created_at = values(created_at),
        created_by = values(created_by),
        updated_at = values(updated_at),
        updated_by = values(updated_by),
        deleted_at = values(deleted_at),
        sort = values(sort),
        stable = values(stable),
        status = values(status),
        memo = values(memo),
        config_item = values(config_item),
        item_default = values(item_default),
        item_custom = values(item_custom)
    </insert>
    
    <!--通过主键修改数据-->
    <update id="update">
        update sys_config_backend
        <set>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                updated_by = #{updatedBy},
            </if>
            <if test="deletedAt != null">
                deleted_at = #{deletedAt},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="stable != null and stable != ''">
                stable = #{stable},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="memo != null and memo != ''">
                memo = #{memo},
            </if>
            <if test="configItem != null and configItem != ''">
                config_item = #{configItem},
            </if>
            <if test="itemDefault != null and itemDefault != ''">
                item_default = #{itemDefault},
            </if>
            <if test="itemCustom != null and itemCustom != ''">
                item_custom = #{itemCustom},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from sys_config_backend
        where id = #{id}
    </delete>


</mapper>


