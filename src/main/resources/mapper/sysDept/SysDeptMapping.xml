    <!--查询单个-->
    <select id="queryById" resultMap="SysDeptMap">
        select id,
               created_at,
               created_by,
               updated_at,
               updated_by,
               deleted_at,
               sort,
               stable,
               status,
               memo,
               parent_code,
               dept_code,
               dept_name,
               leader
        from sys_dept
        where id = #{id}
    </select>
    
    <!--查询指定行数据-->
    <select id="queryAll" resultMap="SysDeptMap">
        select
        id, created_at, created_by, updated_at, updated_by, deleted_at, sort, stable, status, memo, parent_code,
        dept_code, dept_name, leader
        from sys_dept
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createdAt != null">
                and created_at = #{createdAt}
            </if>
            <if test="createdBy != null and createdBy != ''">
                and created_by = #{createdBy}
            </if>
            <if test="updatedAt != null">
                and updated_at = #{updatedAt}
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                and updated_by = #{updatedBy}
            </if>
            <if test="deletedAt != null">
                and deleted_at = #{deletedAt}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="stable != null and stable != ''">
                and stable = #{stable}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
            <if test="parentCode != null and parentCode != ''">
                and parent_code = #{parentCode}
            </if>
            <if test="deptCode != null and deptCode != ''">
                and dept_code = #{deptCode}
            </if>
            <if test="deptName != null and deptName != ''">
                and dept_name = #{deptName}
            </if>
            <if test="leader != null and leader != ''">
                and leader = #{leader}
            </if>
        </where>
    </select>
    
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from sys_dept
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createdAt != null">
                and created_at = #{createdAt}
            </if>
            <if test="createdBy != null and createdBy != ''">
                and created_by = #{createdBy}
            </if>
            <if test="updatedAt != null">
                and updated_at = #{updatedAt}
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                and updated_by = #{updatedBy}
            </if>
            <if test="deletedAt != null">
                and deleted_at = #{deletedAt}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="stable != null and stable != ''">
                and stable = #{stable}
            </if>
            <if test="status != null and status != ''">
