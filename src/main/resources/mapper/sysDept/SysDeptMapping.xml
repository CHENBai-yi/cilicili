            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
            <if test="parentCode != null and parentCode != ''">
                and parent_code = #{parentCode}
            </if>
            <if test="deptCode != null and deptCode != ''">
                and dept_code = #{deptCode}
            </if>
            <if test="deptName != null and deptName != ''">
