<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.cilicili.backend.mapper.SysUserOnlineMapper">
    
    <resultMap type="site.cilicili.backend.domain.pojo.SysUserOnline" id="SysUserOnlineMap">
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="token" column="token" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="queryById" resultMap="SysUserOnlineMap">
        select username,
               token
        from sys_user_online
        where = #{}
    </select>
    
    <!--查询指定行数据-->
    <select id="queryAll" resultMap="SysUserOnlineMap">
        select
        username, token
        from sys_user_online
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
        </where>
    </select>
    
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from sys_user_online
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
        </where>
    </select>
    
    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into sys_user_online(username, token)
        values (#{username}, #{token})
    </insert>
    
    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into sys_user_online(username, token)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.token})
        </foreach>
    </insert>
    
    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into sys_user_online(username, token)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.token})
        </foreach>
        on duplicate key update
        username = values(username),
        token = values(token)
    </insert>
    
    <!--通过主键修改数据-->
    <update id="update">
        update sys_user_online
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="token != null and token != ''">
                token = #{token},
            </if>
        </set>
        where = #{}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from sys_user_online
        where = #{}
    </delete>


</mapper>


