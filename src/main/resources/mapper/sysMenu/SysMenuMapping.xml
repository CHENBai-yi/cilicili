    </select>
    
    <select id="getRoleMenuList" resultMap="SysMenuDto">
        select *from sys_menu
        <if test="sortBy!=null">
            order by ${sortBy}
            <if test="desc">desc</if>
        </if>
        <if test="page>0 and pageSize>0">
            <bind name="cur" value="(page*pageSize)-pageSize"/>
            limit #{cur},#{pageSize}
        </if>
    </select>
    
